<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SearchActivity">

    <LinearLayout
        android:id="@+id/searchPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/search_box"
                tools:ignore="LabelFor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                tools:text="@string/search_for_recipe_or_ingredient_name" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/searchName"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/search_name"
            android:textStyle="bold"
            tools:text="Search by Name" />

        <Button
            android:id="@+id/searchIngredient"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_ingredient"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/addRecipe"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/searchPage"
        android:layout_alignParentTop="true"
        android:layout_marginTop="219dp"
        android:layout_marginEnd="4dp"
        android:text="Add Recipe" />

    <Button
        android:id="@+id/AdminOpt"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/searchPage"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="167dp"
        android:text="Admin Options" />


</RelativeLayout>